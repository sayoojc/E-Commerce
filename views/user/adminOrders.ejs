<script>
  //////////fetch to cancel order//////////////////
  document.addEventListener('DOMContentLoaded', function () {
  const cancelOrderButtons = document.querySelectorAll('#cancelOrderButton');

  cancelOrderButtons.forEach(button => {
    button.addEventListener('click', function () {
      const orderId = this.getAttribute('data-orderId');
      const productId = this.getAttribute('data-productId');
      const count = this.getAttribute('data-count'); // Get the product ID

      fetch('/cancelOrder', {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ orderId, productId,count })  // Send both orderId and productId
      })
        .then(response => response.json())
        .then(data => {
          if (data.message.includes('successfully')) {
            console.log(data.message);
            window.location.replace('/admin/getAdminOrdersPage');  // Redirect to order history
          } else {
            console.error('Failed to remove product from order');
            document.getElementById('backend-error').textContent = 'Failed to remove product from order.';
          }
        })
        .catch(error => {
          console.error('Error:', error);
          document.getElementById('backend-error').textContent = 'An error occurred.';
        });
    });
  });
});

