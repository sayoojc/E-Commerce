   <link rel="stylesheet" href="/user/css/userLogin.css">
</head>
<body>
  <div class="login-box">
      <h2>Forgot Password</h2>
      <h5 style="color: white;">Enter your registered email to reset your password.</h5>
      <% if (error) { %>
        <p class="error-message"><%= error %></p>
      <% } %>
      
      <form name="forgotPasswordForm" method="post" action="/postForgotPassword" >
        <div class="user-box">
          <input type="email" name="user_email">
          <label>Email</label>
          <span id="emailError" class="error-message"></span>
        </div>
       
        
        <button type="submit" id="submitBtn">
          
          <span></span>
          <span></span>
          <span></span>
          <span></span>
          Submit
         
        </button>
      </form>
      
  </div>
  <script src="/admin/js/userlogin.js"></script>
</body>
</html>
