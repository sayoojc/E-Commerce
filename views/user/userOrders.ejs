    <main>
    
        <div class="container-fluid" style="padding-left: 170px; padding-right: 170px;">
            <div class="col-md-10 col-lg-12 border border-dark p-3 custom-div">
              <h1>Order History</h1>
              <% if (orders && orders.length > 0) { %>
                <% orders.forEach(order => { %>
                  <div class="order col-md-10 col-lg-12 border border-dark p-3 custom-div mb-3">
                    <h2>Order Date: <%= new Date(order.orders[0].orderDate).toDateString() %></h2>
                    <ul>
                      <% order.orders.forEach(item => { %>
                        <li class="order-item d-flex align-items-center mb-3">
                          <img src="/<%= item.product_id.image[0] %>" alt="<%= item.product_id.name %>" class="order-item-image">
                          <div class="order-item-details ml-3">
                            <p><strong>Product:</strong> <%= item.product_id.productName %></p>
                            <p><strong>Quantity:</strong> <%= item.count %></p>
                            <p><strong>Price:</strong> $<%= item.price %></p>
                            <p><strong>Status:</strong> <%= item.orderStatus %></p>
                            <p><strong>Payment Method:</strong> <%= item.payment %></p>
                          </div>
                        </li>
                        <li>
                          <button id="cancelOrderButton" 
                          data-count="<%= item.count %>"
            data-orderId="<%= order._id %>" 
            data-productId="<%= item.product_id._id %>">Cancel</button>
                        </li>
                      <% }) %>
                    </ul>
                    
                  </div>

                <% }) %>
              <% } else { %>
                <p>You have no order history.</p>
              <% } %>
            </div>
          </div>
         
        
     
                <div id="backend-error"></div>
       
    
      
      
      </main>
   








