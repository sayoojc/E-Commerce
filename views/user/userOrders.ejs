<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile Page</title>
  <link rel="stylesheet" href="/user/css/profile.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <title>NUTROMAX</title>
  <!-- bootstrap core css -->
  <link rel="stylesheet" type="text/css" href="/user/css/bootstrap.css" />
  <!-- font awesome style -->
  <link href="/user/css/font-awesome.min.css" rel="stylesheet" />

  <!-- responsive style -->
  <link href="/user/css/responsive.css" rel="stylesheet" />
  <!-- Custom styles for this template -->
  <link href="/user/css/style.css" rel="stylesheet" />
  <link rel="stylesheet" href="/user/css/my-style.css">
  <link href="https://use.fontawesome.com/releases/v5.0.1/css/all.css" rel="stylesheet">


<style>

a {
      text-decoration: none; /* Remove underline */
      color: inherit; /* Inherit text color from parent */
      transition: none; /* Disable any transition effects */
    }

    /* Hover effect (removes default) */
    a:hover {
      text-decoration: none; /* Ensure underline is not added on hover */
      color: inherit; /* Ensure text color does not change on hover */
    }
    footer {
    background: #f8f8f8;
    padding: 45px 0 1px;
    
}

</style>
</head>

<%-include('./header.ejs')%>

  <body>
    <div class="bodyContainer">
      <div class="sidebar">
        <div class="profile-info">
          <img src="/admin/images/uniSexProfileLogo.jpeg" alt="Profile Picture">
          <h2>
           <%=user.name%>
          </h2>
          <p>
          <%=user.email%>
          </p>

        </div>
        <ul class="sidebar-menu">
          <li class="active"><a href="#">My Orders</a></li>
          <li><a href="#">My Cart</a></li>
          <li><a href="#">My Profile</a></li>
          <li><a href="#">Wishlist</a></li>
          <li><a href="#">Logout</a></li>
        </ul>
      </div>
      <div class="main-content">


        <h1>My Orders</h1>
        <div class="profile-form d-flex flex-column">
          <div>
            <% if (orders && orders.length > 0) { %>
              <% orders.forEach(order => { %>
                <a href="/getOrderDetail/<%=order._id%>" >
                <div class="order col-md-10 col-lg-12 border border-dark p-3 custom-div mb-3">
                  <ul>
                    <% order.products.forEach(item => { %>
                      <li class="order-item d-flex align-items-center mb-3">
                        <div class="order-item-container"> 
                        </div>
                        
                        <div class="order-item-details d-flex flex-grow-1 justify-content-between align-items-center ml-3">
                      
                          <img src="/<%=item.productImage%>" alt="product image" style="width: 70px;">
                          <strong><p class="mb-0 pr-3"> <%= item.productName %></p></strong>
                          <strong><p class="mb-0 pr-3"> â‚¹<%= item.price %></p></strong>
                        
                       
                        </div>
                      </li>
                      
                    <% }) %>
                  </ul>
                </div>
              </a>
              <% }) %>
            <% } else { %>
              <p>You have no order history.</p>
            <% } %>
          </div>

 <!-- Pagination Controls -->
 <nav aria-label="Page navigation">
  <ul class="pagination">
    <% if (page > 1) { %>
      <li class="page-item">
        <a class="page-link" href="?search=<%= search %>&page=<%= page - 1 %>&limit=<%= limit %>" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
    <% } %>
    <% for (let i = 1; i <= totalPages; i++) { %>
      <li class="page-item <%= page === i ? 'active' : '' %>">
        <a class="page-link" href="?search=<%= search %>&page=<%= i %>&limit=<%= limit %>"><%= i %></a>
      </li>
    <% } %>
    <% if (page < totalPages) { %>
      <li class="page-item">
        <a class="page-link" href="?search=<%= search %>&page=<%= page + 1 %>&limit=<%= limit %>" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    <% } %>
  </ul>
</nav>


          <div id="backend-error"></div>
        </div>
        



      </div>
    </div>




<%-include('./footer.ejs') %>





<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <!-- jQery -->
    <script src="/user/js/jquery-3.4.1.min.js"></script>
    <!-- popper js -->
    <script src="/user/js/popper.min.js"></script>
    <!-- bootstrap js -->
    <script src="/user/js/bootstrap.js"></script>
    <!-- custom js -->
    <script src="/user/js/custom.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
  </body>

</html>




















