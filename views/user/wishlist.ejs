<style>
    .product-card {
    position: relative; /* Make the container position relative */
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 5px;
    transition: transform 0.2s;
    overflow: hidden;
    width: 100%;
    max-width: 250px;
    margin: 0 auto;
    padding: 10px;
}

.product-card:hover {
    transform: scale(1.05);
}

.product-image img {
    width: 100%;
    height: auto;
    
}

.product-info {
    padding: 15px;
}

.product-name {
    font-size: 1rem;
    font-weight: bold;
    margin-bottom: 5px;
}

.product-category {
    color: #888;
    margin-bottom: 5px;
    font-size: 0.9rem;
}

.product-price {
    font-size: 0.9rem;
    color: #333;
    margin-bottom: 5px;
}

.product-description {
    font-size: 0.8rem;
    color: #666;
}


.input-group {
        width: 100%;
        
    }

    .input-group .btn {
        width: 30px;
        height: 30px;
        line-height: 0.8;
    }

    .product-count {
    width: calc(100% - 68px); /* Adjust width according to button width */
    text-align: center;
   
   height:30px;
    border: 1px solid #ced4da;
    border-radius: 0.25rem;
    padding: 0.375rem 0.75rem;
}

</style>

