  <main>
    <div class="backdiv">
      <div class="categoryHeader">
        <h1>Products</h1>
        
          <!--    add product button     -->
        <a href="/admin/getAddProducts" class="button">Add Products</a>
        
        
      </div>

      <div class="fresh-table full-color-orange" style="margin-bottom: 50px;">
        <table id="fresh-table" class="table">
          <thead>
            <th data-field="id">ID</th>
            <th data-field="name">Product Name</th>
            <th>Image</th>
            <th>Category</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Description</th>
            <th data-field="actions" data-formatter="operateFormatter" data-events="operateEvents">Actions</th>
          </thead>
          <tbody>
            <% let count=1 %>
              <% products.forEach(function(product) { %>
                <tr>
                  <td>
                    <%= count %>
                  </td>
                  <td>
                    <%= product.productName %>
                    <% let bool = product.isBlocked ? 'Blocked' :'Active' %>
                  </td>
                  <td>
                        <img src="/<%= product.image[0] %>" alt="<%=product.productyName%>image" style="height:150px; width: 150px;">
                  </td>
                  <td>
                    <% if (product.category && product.category.categoryName) { %>
                      <%= product.category.categoryName %>
                    <% } else { %>
                      N/A
                    <% } %>
                  </td>
                  <td>
                    <%=product.price%>
                  </td>
                  <td>
                    <%=product.stock%>
                  </td>
                  <td>
                    <%=product.description%>
                  </td>
                  <td>
                    <div style="display: flex;">
                      <a href="/admin/getEditProducts/<%= product._id %>" class="btn">Edit</a>
                    
                      <button class="block-btn" data-id="<%= product._id %>" data-isBlocked = "<%= bool %>" value="<%= bool %>" style="margin-left: 20px;"><%=bool%></button>
                    </div>
                   
                  </td>
                </tr>
                <% count++; %>
                  <% }); %>
          </tbody>
        </table>
      </div>
      <div class="pagination">
        <ul class="pagination">
            <% if (currentPage > 1) { %>
                <li class="page-item"><a class="page-link" href="?page=<%= currentPage - 1 %>&limit=<%= limit %>">Previous</a></li>
            <% } %>
    
            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>&limit=<%= limit %>"><%= i %></a>
                </li>
            <% } %>
    
            <% if (currentPage < totalPages) { %>
                <li class="page-item"><a class="page-link" href="?page=<%= currentPage + 1 %>&limit=<%= limit %>">Next</a></li>
            <% } %>
        </ul>
    </div>
